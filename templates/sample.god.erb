God.watch do |w|
  w.name = "<%= @name %>"
  <% if @start_command %>
  w.start = "<%= @start_command %>"
  <% end %>
  <% if @stop_command %>
  w.stop = "<%= @stop_command %>"
  <% end %>
  <% if @restart_command %>
  w.restart = "<%= @restart_command %>"
  <% end %>
  <% if @pidfile %>
  w.pid_file = "<%= @pidfile %>"
  w.start_if do |start|
    start.condition(:process_running) do |c|
      c.interval = 5.seconds
      c.running = false
    end
    start.condition(:process_exits)
  end
  <% end %>
  w.keepalive
end
